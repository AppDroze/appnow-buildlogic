root = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
charset = utf-8
end_of_line = lf
insert_final_newline = true

# IntelliJ Kotlin hints (keeps imports tidy, trailing comma helpful for diffs)
ij_kotlin_allow_trailing_comma = true
ij_kotlin_name_count_to_use_star_import = 99
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^

[*.gradle.kts]
indent_size = 4

